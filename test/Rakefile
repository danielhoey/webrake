require_relative '../src/webrake'

task :default => ['build']

Webrake.new(
  Rake.application, 
  FileSystem.new('actual'),
  :filters => { '*.html.erb' => Filters::PassThroughFilter.new, },
  :output => { '*.html' => Layout::Erb.new('actual/layout/default.html.erb') }
)

#puts Rake.application.tasks.inspect
task :build_clean => ['clean', 'build']
